@inherits LayoutComponentBase

<div class="page-container" style="max-width: 480px; margin: 0 auto; min-height: 100vh; background: #fff; position: relative;">
    <main>
        @Body
    </main>
</div>

<style>
    /* Ensure the app behaves like a mobile app even on desktop browser for testing */
    body {
        background-color: #f0f2f5; /* Grey background outside the mobile frame */
        display: flex;
        justify-content: center;
    }
    
    .page-container {
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
    }

    @@media (max-width: 576px) {
        body {
            background-color: #fff;
            display: block;
        }
        .page-container {
            max-width: 100%;
            box-shadow: none;
        }
    }
</style>

@code {
    // No extra logic needed for the clean layout
}
