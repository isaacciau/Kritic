@page "/"
@inject NavigationManager NavigationManager
<div class="container text-center mt-5">
    <h1 class="tech-gradient-text display-4 mb-3">Kritik - Inicio</h1>
    <p class="lead mb-5 text-muted">Selecciona tu rol para comenzar</p>

    <div class="cards-wrapper d-flex justify-content-center gap-4 flex-wrap">
        <div class="role-card student p-4 shadow-sm bg-white rounded-4" style="cursor:pointer; width: 280px;" @onclick="SelectStudent">
            <div class="icon-bubble display-1 mb-3">🎓</div>
            <div class="card-info">
                <h2 class="h4 fw-bold">Soy Alumno</h2>
                <p class="text-secondary">Votar por mis favoritos</p>
            </div>
            <div class="arrow-icon mt-3 h3 text-primary">➜</div>
        </div>
        <div class="role-card professor p-4 shadow-sm bg-white rounded-4" style="cursor:pointer; width: 280px;" @onclick="SelectProfessor">
            <div class="icon-bubble display-1 mb-3">👨‍🏫</div>
            <div class="card-info">
                <h2 class="h4 fw-bold">Soy Profesor</h2>
                <p class="text-secondary">Evaluación técnica oficial</p>
            </div>
            <div class="arrow-icon mt-3 h3 text-primary">➜</div>
        </div>
    </div>
    <div class="footer-actions mt-5">
        <button class="btn btn-outline-dark rounded-pill px-4 py-2" @onclick="GoToResults">🏆 Ver Resultados en Vivo</button>
    </div>
</div>

@code {
    private void SelectStudent() => NavigationManager.NavigateTo("/projects");
    private void SelectProfessor() => NavigationManager.NavigateTo("/projects");
    private void GoToResults() => NavigationManager.NavigateTo("/resultados");
}
